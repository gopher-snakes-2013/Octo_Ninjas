<p>Logged in as: <%= current_user.username %></p>
<h3>Great! Here's your survey:</h3>
<p>Send this link to your friends: <a href="/surveys/<%= @survey.survey_url %>">My Awesome Survey</a></p>
<h4>Info:</h4>
<p><%= @survey.survey_info %></p>
	<% if @movie_list %>
		<h4>Your Movies</h4>
		<div id="movie_list">
		<% @movie_list.each do |movie| %>
			<div class="movie"><img src=<%= movie.pic %> style="width:100px">
				<span id="movie_text"> Title: <%= movie.title %>
				Runtime: <%= movie.runtime %> min
				Critic's Score: <%= movie.critics_score %>
				Audience Score: <%= movie.audience_score %>
				</span>
				</div>
		<% end %>
	  </div>
	<% end %>
<br />
<form id="form-logout" action="/logout" method="post">
  <input type="submit" value="logout" />
</form>
<a href="../">Go Home</a>
