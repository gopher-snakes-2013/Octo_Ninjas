<p>Logged in as: <%= current_user.username %></p>
<h3>Great! Here's your survey:</h3>
<p>Send this link to your friends: <a href="/surveys/<%= @survey.survey_url %>">My Awesome Survey</a></p>
<h4>Info:</h4>
<p><%= @survey.survey_info %></p>
	<% if current_movie_list.length >= 1  %>
		<h4>Your Movies</h4>
		<div id="movie_list">
		<% current_movie_list.each do |movie| %>
			<div class="movie">
				<img class="movie_pic" src=<%= movie.pic %> width="214" height="317"><br />
				<div class="movie_info">
					<div class="movie_title"><%= movie.title %><br /></div>
					<div class="movie_synopsis"><%= movie.synopsis %><br /></div>
				</div>
			</div>
		</div>
		<% end %>
	<% end %>
<br />
<hr />
<form id="form-logout" action="/logout" method="post">
  <input type="submit" value="logout" />
</form>
<a href="../">Go Home</a>
